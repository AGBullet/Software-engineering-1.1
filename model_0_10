import random

# Генерируем случайное число от 0 до 10, которое модель будет угадывать
target_number = random.randint(0, 10)

def guess_number():
    while True:
        try:
            guess = int(input("Попробуйте угадать число от 0 до 10: "))
            if guess < 0 or guess > 10:
                print("Пожалуйста, введите число от 0 до 10.")
            else:
                if guess == target_number:
                    print(f"Поздравляем! Вы угадали число {target_number}.")
                    break
                else:
                    print("Попробуйте ещё раз. Не угадали.")
        except ValueError:
            print("Пожалуйста, введите целое число от 0 до 10.")

if __name__ == "__main__":
    guess_number()
